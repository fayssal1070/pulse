{
  "crons": [
    {
      "path": "/api/cron/sync-aws-costs",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/evaluate-alerts",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/run-alerts",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/apply-retention",
      "schedule": "15 3 * * *"
    },
    {
      "path": "/api/cron/retry-notifications",
      "schedule": "*/30 * * * *"
    }
  ]
}

